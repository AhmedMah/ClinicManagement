@model ClinicManagement.Core.ViewModel.PatientDetailViewModel





<div class="container bg-light">
    <div class="py-5 text-center">
    </div>
    @*<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>*@

    <div class="row modal-body">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Patient</span>

            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Token:</span>
                    <strong>@Model.Patient.Token</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"> Name</h6>
                        <small class="text-muted">@Model.Patient.Name</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Phone</h6>
                        <small class="text-muted">@Model.Patient.Phone</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Date Added</h6>
                        <small class="text-muted">@Model.Patient.DateTime.ToString("MMM"), @Model.Patient.DateTime.ToString("d ")- @Model.Patient.DateTime.ToString("yyyy")-@Model.Patient.DateTime.ToString("HH:mm")</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Address</h6>
                        <small>@Model.Patient.Address</small>
                    </div>
                </li>
            </ul>

        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Attendances</h4>
            <div class="row">
                <table  class="table table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th class="col-md-4 mb-2">Clinic Remarks</th>
                            <th class="col-md-4 mb-2">Diagnosis</th>
                            <th class="col-md-4 mb-2">Second Diagnosis</th>
                            <th class="col-md-4 mb-2">Third Diagnosis</th>
                            <th class="col-md-4 mb-2">Therapy</th>
                            <th class="col-md-4 mb-2">Date</th>
                            <th class="col-md-4 mb-2">Doctor</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model.OpdAttendances)
                        {
                            <tr>
                                <td>@item.ClinicRemarks</td>
                                <td>@item.Diagnosis</td>
                                <td>@item.SecondDiagnosis</td>
                                <td>@item.ThirdDiagnosis</td>
                                <td>@item.Therapy</td>
                                <td>@item.Date.ToString("d")</td>
                                <td>@Model.Patient.Doctor.Name</td>

                            </tr>


                        }
                    </tbody>

                </table>

            </div>

        </div>

    </div>
    <div class="modal-footer">
        <div class="row ">
            <div class="col-xs-12">
                <a href="@Url.Action("Edit", "Patients", new { id= Model.Patient.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i>Edit Patient</a>

                <a href="@Url.Action("Create", "OpdAttendances", new { id =Model.Patient.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i> Add Prescription</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> Close</button>

            </div>
        </div>
    </div>

</div>

<script>

         $('.dataTables').DataTable({
             "scrollY": "300px",
             "scrollCollapse": true,
             "paging": false,
             "filter": false,
             "info": false
         });


</script>
